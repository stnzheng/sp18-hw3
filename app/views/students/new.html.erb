<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_name, nil, placeholder: @placeholder_name) %>

  <%= label_tag(:catch_phrase, "Catch phrase") %>
  <%= text_field_tag(:catch_phrase, nil, placeholder: @placeholder_phrase) %>

  <%= label_tag(:org, "Organization") %>
  <%= text_field_tag(:org, nil, placeholder: @placeholder_org) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create Student") %>
<% end %>
